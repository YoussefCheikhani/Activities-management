
{{ include('pages/inc/header.html.twig') }}
	<div class="container">
  <br>
	<h3>Liste des Activités</h3>
		<table class="table table-hover">
  <thead>
  <div class="row">
      <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/create_activite" class="btn btn-success">Ajouter Activite</a>
    </div>
    <tr>
      <th scope="col">Nom d'Activité</th>
      <th scope="col">Type d'activité</th>
      <th scope="col">Description</th>
      <th scope="col">Opération</th>
    </tr>
  </thead>
  <tbody>
    {% for activite in activites %}
    <tr class="table-active">
      <th scope="row">{{ activite.nomA }}</th>
      <td>{{ activite.type }}</td>
      <td>{{ activite.description }}</td>
      <td>
        <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/show_activite/{{ activite.id }}" class="btn btn-primary">Voir</a>

        <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/update_activite/{{ activite.id }}" class="btn btn-primary">Modifier</a>
        
        <a href="{{ absolute_url(asset('')) }}app_dev.php/activite/delete/{{ activite.id }}" class="btn btn-danger">Supprimer</a>
      </td>
    </tr>
    {% else %}
      <tr>
        <td>Aucune activite pour l'instant</td>
      </tr>
    {% endfor %}
  </tbody>
</table> 
	</div>

{{ include('pages/inc/footer.html.twig') }}

